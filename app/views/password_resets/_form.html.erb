 <%= form_for @user, :url => password_reset_path(@user), :html => {:method => :put} do |f| %>
    <div class="field">
    	<%= f.label :email %><br />
      <%= @user.email %>
    </div>
    <div class="field">
      <%= f.label :password %><br />
      <%= f.password_field :password %>
    </div>
    <div class="field">
      <%= f.label :password_confirmation %><br />
      <%= f.password_field :password_confirmation %>
  	<%= hidden_field_tag :token, @token %>
    </div>
    <div class="actions">
      <%= f.submit %>
    </div>
<% end %>